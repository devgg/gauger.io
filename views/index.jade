extends layout

block content
    header
        | Florian Gauger
        div(class='header_subtext')
            | Software Engineer
            | #{page}
    div(id='header_image')


    each article in articles
        div(class= 'article')
            h1(class='article_head')= article.head
            p(class='article_text')= article.text
            div(class='article_footer')
                div(class='left')
                    - var n = 0
                    while n < article.categories.length
                        a(href= article.categories[n]) #{categories.get(article.categories[n])}
                        - n++
                div(class='right')
                    time 9 January 2016
            div(style='clear:both')

    footer
        if showButtonNext
            button(class='button' onclick='window.open(#{page} + 1, "_self")') next
        //a(href='www.something.com')
            img(src='images/test.png')

